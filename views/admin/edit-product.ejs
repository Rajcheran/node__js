<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <%- include('../includes/navigation.ejs')%>

    <main class="m">
        <form action="/admin/<%if(editing){%>edit-product<%}else{%>add-product<%}%>" method="post" >
            <h1><%editing%></h1>
            <label for="title">title </label>
            <input type="text" name="title" value="<% if (editing) { %><%=prod.title%><% } %> ">
            <label for="imageurl">imageurl</label>
            <input type="text" name="imageurl" value="<% if (editing) { %><%=prod.imageurl%><% } %>">
            <input type="number" name="price" value="<% if (editing) { %><%=prod.price%><% } %>">
            <textarea name="discription" id="" rows="5"><% if (editing) { %><%=prod.discription%><% } %></textarea>
            <% if (editing){%>
            <input type="hidden" name="productid" id="" value="<%=prod.id%>">
            <%}%>
            <button type="submit"><% if (editing) { %> Update product <% } else {%> Add product<% } %></button>
        </form>
    </main>
</body>
</html>