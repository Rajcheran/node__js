<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="../styles.css">
</head>
<body>
    <%- include('../includes/navigation.ejs')%>

    <main>
        <div class="grid">
               <% if(prods.length>0){%>
                <div class="grid">
                    <% for (let products of prods){%>
                    <article class="card product-item">
                        <header class="card_header">
                            <h1 class="product_title"><%= products.productdata.title %>(<%= products.qty %>)</h1>
                        </header>
                        <div class="card_image">
                            <img src="products.productdata.imageurl" alt="A Book">
                        </div>
                        <div class="car_content">
                            <h2 class="product_price">$<%= products.productdata.price %></h2>
                            <p class="product_description"><%= products.productdata.discription %></p>
                        </div>
                        <div class="card_actions">
                            <a href="/products/<%= products.productdata.id %>">Details</a>
                            <form action="/cart-delete-item" method="post">
                                <button type="submit">Delete</button>
                                <input type="hidden" name="productid" value="<%= products.productdata.id %>">
                            </form>
                        </div>
                    </article>
                    <%}%>
                </div>
                <%}else{%>
                    <h1>No products in the cart</h1>
                <%}%>
            
        </div>
    </main>
</body>
</html>